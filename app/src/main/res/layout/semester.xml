<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Semester">

    <Button
        android:id="@+id/first_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/first_semester"
        android:padding="20dp"
        android:text="@string/first_semester"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <Button
        android:id="@+id/second_semester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/second_semester"
        android:padding="20dp"
        android:text="@string/second_semester"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp" />
</LinearLayout>