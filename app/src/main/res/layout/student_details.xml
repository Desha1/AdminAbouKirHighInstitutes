                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toStartOf="@id/sub7"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="InvalidId,MissingConstraints" />

                <TextView
                    android:id="@+id/sub7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sub7"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sub7_text"
                    tools:ignore="InvalidId,MissingConstraints" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/subject8_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/sub8_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sub8"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toStartOf="@id/sub8"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="InvalidId,MissingConstraints" />

                <TextView
                    android:id="@+id/sub8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/sub8"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/sub8_text"
                    tools:ignore="InvalidId,MissingConstraints" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>

        <!--Bottom Section-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bottom_section"
            android:orientation="vertical"
            android:padding="7dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/total_sum_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/total_sum"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toStartOf="@id/total_sum"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="InvalidId,MissingConstraints" />

                <TextView
                    android:id="@+id/total_sum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/total_sum"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/total_sum_text"
                    tools:ignore="InvalidId,MissingConstraints" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/percent_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/percentage"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toStartOf="@id/percent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="InvalidId,MissingConstraints" />

                <TextView
                    android:id="@+id/percent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/percentage"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/percent_text"
                    tools:ignore="InvalidId,MissingConstraints" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/total_appreciation_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/appreciation"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toStartOf="@id/total_appreciation"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="InvalidId,MissingConstraints" />

                <TextView
                    android:id="@+id/total_appreciation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/appreciation"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/total_appreciation_text"
                    tools:ignore="InvalidId,MissingConstraints" />
            </android.support.constraint.ConstraintLayout>


        </LinearLayout>

    </LinearLayout>

</ScrollView>